.th-box {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  flex: 1;
  justify-content: inherit;
}

.check-box {
  display: flex;
  width: 100%;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
}

.check-box image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx 0 0;
}

.th-box .sort-img {
  width: 16rpx;
  height: 20rpx;
  margin: 0 0 0 8rpx;
  flex: none;
}

.check-color{
  color: rgb(5, 97, 221);
}