
.table-header {
  font-size: 22rpx;
  background: #fff;
}

.table-header > view {
  height: 80rpx;
  display: flex;
  align-items: center;
}

.table-container-fixed.table-header > view:first-of-type {
  position: fixed;
  top: 0;
  z-index: 999;
}


.table-container-fixed.table-header > view:last-of-type {
  display: block;
}

.table-header > view:last-of-type {
  display: none;
}

.table-header > view > view {
  min-width: 50rpx;
  color: #6f7c97;
  flex: none;
  background: #fff;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 13rpx;
}

.table-header > view > view >th {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: inherit;
}